{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "noEmitOnError": false,    // Genera archivos JS aunque haya errores
    "allowJs": true,          // Permite mezclar JS y TS
    "strict": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "eslint.config.mjs"
  ],
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts"
  ]
}
